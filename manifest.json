{
  "manifest_version": 3,
  "name": "Habit Tracker",
  "version": "1.0",

  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "idle",
    "windows",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "dashboard.html"
  }
}